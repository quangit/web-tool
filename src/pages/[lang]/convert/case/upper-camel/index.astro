---
import EncodingPage from '../../../../../components/EncodingPage.astro';
import { languages } from '../../../../../i18n/ui';
import { useTranslations } from '../../../../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => {
    return { params: { lang } };
  });
}

const { lang = 'en' } = Astro.params;
const t = useTranslations(lang as any);

const title = t('upper_camel.title');
const description = t('upper_camel.description');
const toolName = t('convert');
const jsFile = 'change-case.min.js';
const initScript = 'window.method = ChangeCase.pascalCase; methodLoad();';
const activePage = 'convert/case/upper-camel/';
const reverseLink = '';
---

<EncodingPage
  title={title}
  description={description}
  toolName={toolName}
  jsFile={jsFile}
  initScript={initScript}
  activePage={activePage}
  reverseLink={reverseLink}
  hasInputSettings={false}
  hasOutputSettings={false}
  hasFormatSettings={false}
/>
