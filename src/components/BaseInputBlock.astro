---
import CopyButton from './CopyButton.astro';

interface Props {
  title: string;
  showFullscreen?: boolean;
  showCopy?: boolean;
  copyTarget?: string;
  copyMessage?: string;
}

const {
  title,
  showFullscreen = true,
  showCopy = false,
  copyTarget,
  copyMessage = 'Copied',
} = Astro.props;
---

<div class="input">
  <div class="block block-fill">
    <div class="block-title">
      {title}
      <div class="toolbar">
        {showCopy && copyTarget && <CopyButton target={copyTarget} message={copyMessage} />}
        {
          showFullscreen && (
            <button class="icon" data-toggle="fullscreen">
              <i class="fullscreen-icon" data-lucide="maximize" title="Full Screen" />
              <i class="fullscreen-icon-exit" data-lucide="minimize" title="Full Screen" />
            </button>
          )
        }
      </div>
    </div>
    <slot />
  </div>
</div>
